<%- include("../partial/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome To The Great Outdoors!</h1>
			<p>View our hand-picked National Parks from all over the world</p>
			<p>
				<a class="btn btn-primary btn-sm" href="/locations/add">Add New National Parks</a>
			</p>
	    </div>
	</header>
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% locations.forEach((location)=>{ %>
			<div class="col-md-3 col-sm-4">
				<div class="thumbnail">
					<img src="<%= location.image%>" style="width:400px;">	
					<div class="caption">
						<h4><%= location.name%></h4>
					</div>
					<p>
						<a href="/locations/<%= location._id%>" class="btn btn-primary">More Info</a>
					</p>
				</div> 
			</div>
		<% }) %>
		
	</div>

</div>

<%- include("../partial/footer") %>