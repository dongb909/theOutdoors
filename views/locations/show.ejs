<%- include("../partial/header")%>
<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<p class="lead">The Great Outdoors</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-sm-9">
			<div class="thumbnail">
				<img src="<%=location.image%>" class="image-responsive">
				<div class="caption-full">
					<h4 class="pull-right">Stars here</h4>
					<h4><a><%=location.name%></a></h4>
					<p><%=location.description%></p>
					<p> <em>Submitted by <%=location.author.username%></em></p>
					<a class="btn btn-warning" href="/locations/<%= location._id%>/edit">Edit</a>
					<form action="/locations/:id?_method=DELETE" method="POST">
						<button id="delete-button" class="btn btn-danger">Delete</button>
					</form>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/locations/<%=location._id%>/comments/add">Add New Comment</a>
				</div>
				<% location.comments.forEach((comment)=>{ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%=comment.author.username%></strong>
							<span class="pull-right"> <%= Date.now() %> </span>
							<p><%= comment.text %></p>
						</div>
					</div>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../partial/footer")%>  