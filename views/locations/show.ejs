<%- include("../partial/header")%>
<p>
	<%= currentUser %>
</p>
<div class="container">
	<div class="row">
		<div class="col-sm-3">
			<p class="lead">The Great Outdoors</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-sm-9">
			<div class="thumbnail">
				<img src="<%=location.image%>" class="image-responsive">
				<div class="caption-full">
					<h4 class="pull-right">Stars here</h4>
					<h4><a><%=location.name%></a></h4>
					<p><%=location.description%></p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/locations/<%=location._id%>/comments/add">Add New Comment</a>
				</div>
				<% location.comments.forEach((comment)=>{ %>
					<p>
						<strong><%=comment.author%></strong> - <%= comment.text %>
					</p>
				<% }) %>
			</div>
		</div>
	</div>
</div>

<%- include("../partial/footer")%>  