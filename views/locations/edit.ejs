<%- include("../partial/header")%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Editing <%= location.name%></h1>
		<div style="width:40%; margin:30px auto;">
			<form action="/locations/<%= location._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="location[name]" value="<%= location.name%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location[image]" value="<%= location.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location[description]" value="<%= location.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-sm btn-block">Submit!!</button>
				</div>
			</form>
			<a href="/locations/<%= location._id%>">Back</a>
		</div>
	</div>
</div>
<%- include("../partial/footer")%>