<!DOCTYPE html>
<html>
	<head>
		<title>WonderLust</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
	</head>
	<body>
	<nav class="navbar navbar-default">
		<div class="container-fluid">	
			<div class="navbar-header">			
				<a class="navbar-brand" href="/">WONDERLUST - The Great Outdoors</a>
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<% if (!currentUser){ %>
						<li><a href="/login">Login</a></li>
						<li><a href="/register">Sign Up</a></li>
					<% } else { %>
						<li><a href="#">Hi <%= currentUser.username %></a></li>
						<li><a href="/logout">Logout</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>
	<div class="container">
		<% if(flashMessageError && flashMessageError.length > 0){ %>
			<div class="alert alert-danger">
				<%= flashMessageError %>
			</div>
		<% } %>
		<% if(flashMessageSuccess && flashMessageSuccess.length > 0){ %>
			<div class="alert-success">
				<%= flashMessageSuccess %>
			</div>
		<% } %>
	</div>
	
